{
    "compilerOptions": {
        "lib": ["es2019"],
        "noEmit": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "incremental": true,
        "allowUnreachableCode": false
    },
    "types": ["node"],
    "exclude": [
        "./.*-dist/**/*"
    ],
    "include": [
        "./src/*",
        "./src/**/*"
    ]
}